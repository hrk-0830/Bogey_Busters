<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="/path/to/logo.png" alt="Bogey Busters" />
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to admin_customers_path, class: 'nav-link text-light' do %>
              <i class="fas fa-users"></i> ユーザー一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%=  link_to admin_posts_path, class: 'nav-link text-light' do %>
              <i class="fas fa-comments"></i> 口コミ一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <div class="search_form ml-auto">
      <%= form_with(url: admin_search_path, method: :get, local: true) do |f| %>
        <%= f.text_field :word, class: "form-control mr-sm-2" %>
        <%= f.select :range, options_for_select([['コース名'], ['ユーザー名']], {class: "form-control mr-sm-2"}) %>
        <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]], {class: "form-control mr-sm-2"}) %>
        <%= f.submit "検索", class: "btn btn-outline-light my-2 my-sm-0" %>
      <% end %>
    </div>
  </nav>
  <% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:danger] %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:danger] %>
    </div>
  <% end %>
</header>
