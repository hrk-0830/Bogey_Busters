<div class="container my-5">
  <h1>ユーザー一覧</h1>
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>プロフィール画像</th>
            <th>名前</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if @customers.any? %>
            <% @customers.each do |customer| %>
              <tr>
                <td>
                  <%= image_tag customer.get_profile_image, size: '50x50' %>
                </td>
                <td><%= customer.name %></td>
                <td>
                  <% if customer.is_deleted == false %>
                    有効
                  <% else %>
                    退会
                  <% end %>
                </td>
                <td><%= link_to "ユーザー詳細", admin_customer_path(customer), class: "btn btn-primary" %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="3">ユーザーがいません</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @customers, theme: 'twitter-bootstrap-4' %>