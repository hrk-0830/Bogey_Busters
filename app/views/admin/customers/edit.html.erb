<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">プロフィール</h2>
      <div class="form-group">
        <label>プロフィール画像</label>
        <% if @customer.profile_image.attached? %>
          <%= image_tag @customer.profile_image.variant(resize: "300x300"), class: "img-fluid rounded-circle" %>
        <% else %>
          <%= image_tag 'no_image.jpg', size: '50x50' %>
        <% end %>
      </div>

      <div class="form-group">
        <label>名前</label>
        <p class="h5"><%= @customer.name %></p>
      </div>

      <div class="form-group">
        <label>居住地</label>
        <p><%= Customer.residence_statuses_i18n[@customer.residence_status] %></p>
      </div>

      <div class="form-group">
        <label>技術</label>
        <p><%= Customer.technique_statuses_i18n[@customer.technique_status] %></p>
      </div>

      <div class="form-group">
        <label>ベストスコア</label>
        <p><%= @customer.best_score %></p>
      </div>

      <div class="form-group">
        <label>ゴルフ歴</label>
        <p><%= @customer.golf_history %></p>
      </div>

      <div class="form-group">
        <label>紹介文</label>
        <p><%= @customer.introduction %></p>
      </div>

      <div class="form-group">
        <%= link_to "退会する", admin_customer_customers_unsubscribe_path(@customer.id), class: 'btn btn-danger btn-block' %>
      </div>
    </div>
  </div>
</div>
