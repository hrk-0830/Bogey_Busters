<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h2>管理者ログイン</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: resource, local: true, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :メールアドレス %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'sample@example.com' %>
              <div class="invalid-feedback">メールアドレスを入力してください。</div>
            </div>
            <div class="form-group">
              <%= f.label :パスワード %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              <div class="invalid-feedback">パスワードを入力してください。</div>
            </div>
            <div class="form-group text-center mt-5">
              <%= f.submit "ログイン", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
