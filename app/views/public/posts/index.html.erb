<div class ="container">
  <div class ="row my-5">
    <div class ="col-md-4">
      <% if current_customer.email != 'guest@example.com' %>
        <%= link_to "投稿する", new_public_post_path, class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
    <div class ="col-md-4">
      <%= form_tag public_search_prefecture_path, method: :get do %>
        <%= select_tag :prefecture_status, options_for_select(@prefecture_options, @prefecture), prompt: "都道府県を選択してください" %>
        <%= submit_tag "検索" %>
      <% end %>
    </div>
    <div class ="col-md-4">
    </div>
  </div>
  <%= render 'layouts/reviews', posts: @posts %>
  <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
</div>