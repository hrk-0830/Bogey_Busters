<div class="container">
  <div class="row my-5">
    <div class="col-md-5">
      <h3><strong><%= @post.golf_course %></strong></h3>
    </div>
    <div class="col-md-3"></div>
    <div class="col-md-2">
      <h5><%= @post.prefecture_status_i18n %></h5>
    </div>
    <div class="col-md-2">
      <% if @post.star? %>
        <% for i in 1..@post.star do %>
          <i class="fas fa-star text-warning"></i>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="row my-5">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <% if @post.image.attached? %>
        <%= image_tag @post.image, size: "800x400" %>
      <% else %>
        <%= image_tag 'no_image.jpg', size: "800x400" %>
      <% end %>
    </div>
    <div class="col-md-1"></div>
  </div>

  <div class="row my-5">
    <div class="col-md-2">
      <h4><strong><%= @post.title %></strong></h4>
    </div>
    <div class="col-md-8"></div>
    <div class="col-md-2">
      <%= @post.difficulty_status_i18n %>
    </div>
  </div>

  <div class="row my-5">
    <div class="col-md-8">
      <%= @post.review %>
    </div>
    <div class="col-md-4"></div>
  </div>

  <div class ="row my-5">
    <div class ="favorite-btn col-md-3">
      <%= render "public/favorites/btn", post: @post %>
    </div>
    <div class ="col-md-9"></div>
  </div>

  <div class ="row my-5">
    <div class ="col-md-6">
      <%= render "public/post_comments/form", post: @post, post_comment: @post_comment %>
    </div>
    <div class ="col-md-4">
      <% @post.tags.each do |tag| %>
        <%= link_to tag.name, public_tag_path(tag) %>
      <% end %>
    </div>
    <div class ="col-md-2">
      <%= link_to "編集する", edit_public_post_path(@post), class: "btn btn-primary" %>
    </div>
  </div>

  <div class ="row my-5">
    <div class ="col-md-6">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>User</th>
            <th>Comment</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @post.post_comments.each do |post_comment| %>
          <tr>
            <td>
              <%= link_to public_customer_path(post_comment.customer) do %>
                <%= post_comment.customer.name %>
              <% end %>
            </td>
            <td><%= post_comment.comment %></td>
            <td>
              <% if post_comment.customer == current_customer %>
                <%= link_to "削除", public_post_post_comment_path(@post, post_comment), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class ="col-md-6"></div>
  </div>
</div>