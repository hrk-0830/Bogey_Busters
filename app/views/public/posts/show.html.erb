<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h3><strong><%= @post.golf_course %></strong></h3>
    </div>
    <div class="col-md-3"></div>
    <div class="col-md-2">
      <h5><%= @post.prefecture_status_i18n %></h5>
    </div>
    <div class="col-md-2">
      <% if @post.star? %>
        <% for i in 1..@post.star do %>
          <i class="fas fa-star text-warning"></i>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <% if @post.image.attached? %>
        <%= image_tag @post.image, size: "800x400" %>
      <% else %>
        <%= image_tag 'no_image.jpg', size: "800x400" %>
      <% end %>
    </div>
    <div class="col-md-1"></div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <h4><strong><%= @post.title %></strong></h4>
    </div>
    <div class="col-md-8"></div>
    <div class="col-md-2">
      <%= @post.difficulty_status_i18n %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <%= @post.review %>
    </div>
    <div class="col-md-4"></div>
  </div>

  <div class ="row">
    <div class ="col-md-3">
      <%= render "public/favorites/btn", post: @post %>
    </div>
    <div class ="col-md-9"></div>
  </div>

  <!--タグ一覧-->

  <div class="row">
    <div class="col-md-10"></div>
    <div class="col-md-2">
      <%= link_to "編集する", edit_public_post_path(@post), class: "btn btn-primary" %>
    </div>
  </div>

  <div class ="row">
    <div class ="col-md-6">
      <%= render "public/post_comments/form", post: @post, post_comment: @post_comment %>
    </div>
    <div class ="col-md-6">
      <%= render "public/post_comments/index", post: @post %>
    </div>
  </div>

</div>
