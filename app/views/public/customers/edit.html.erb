<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">プロフィール編集</h2>
      <%= form_with model: @customer, url: public_customer_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :profile_image, "プロフィール画像" %>
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :residence_status, "居住地" %>
          <%= f.select :residence_status, options_for_select(Customer.residence_statuses_i18n.invert, selected: @customer.residence_status), {}, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :technique_status, "技術" %>
          <%= f.select :technique_status, options_for_select(Customer.technique_statuses_i18n.invert, selected: @customer.technique_status), {}, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :best_score, "ベストスコア" %>
          <%= f.text_field :best_score, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :golf_history, "ゴルフ歴" %>
          <%= f.text_field :golf_history, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, '紹介文' %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "編集する", class: "btn btn-primary btn-block" %>
          <% if current_customer.email != 'guest@example.com' %>
            <%= link_to "退会する", public_customer_customers_unsubscribe_path(current_customer.id), class: 'btn btn-block btn-danger' %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
